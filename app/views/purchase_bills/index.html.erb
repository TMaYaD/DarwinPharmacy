<% semantic_form_for @search do |f| %>
  <%= f.input :bill_number_like %>
  <%= f.input :supplier_name_like %>
  <%= f.input :created_at_greater_than %>
  <%= f.input :created_at_less_than %>
  <%= f.submit 'Search' %>
<% end %>

<% table_for @purchase_bills do |t| %>
  <%= t.data :id, :bill_number, :supplier, :created_at, :due_date, :amount, :actions => :all %>
<% end %>

<%= link_to 'New purchase_bill', new_purchase_bill_path %>
