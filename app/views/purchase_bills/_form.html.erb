<% semantic_form_for(@purchase_bill) do |f| %>
  <% f.inputs do %>
    <%= f.input :supplier_name %>
    <%= f.input :bill_number %>
    <%= f.input :created_at, :as => :date %>
    <%= f.input :due_date %>
  <% end %>
  <%= f.buttons %>
  <% f.inputs do %>
    <% f.object.purchase_bill_items.build if f.object.purchase_bill_items.count == 0 %>
    <% f.inputs :for => :purchase_bill_items, :class => 'item' do |builder| %>
      <%= render 'purchase_bill_items/inputs', :f => builder %>
    <% end %>
    <%= link_to_add_fieldset "Add Item", f, :purchase_bill_items %>
  <% end %>
  <%= f.buttons %>
<% end %>
