<% semantic_form_for @search do |f| %>
  <%= f.inputs :login_like, :email_like, :phone_like, :role_like %>
  <%= f.submit 'Search' %>
<% end %>

<% table_for @users do |t| %>
  <%= t.data :login, :email, :phone, :role, :actions => :all %>
<% end %>

<%= link_to 'New user', new_user_path, :id => 'add_new', :class => 'ui-icon ui-icon-plusthick' %>
