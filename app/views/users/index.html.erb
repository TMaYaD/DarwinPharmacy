<% table_for @users do |t| %>
  <tr>
    <% semantic_form_for @search do |f| %>
      <th><%= f.input :login_like %></th>
      <th><%= f.input :email_like %></th>
      <th><%= f.input :phone_like %></th>
      <th><%= f.input :role_like %></th>
      <th><%= f.submit 'Search' %></th>
    <% end %>
  </tr>
  <%= t.data :login, :email, :phone, :role, :actions => :all %>
<% end %>

<%= will_paginate @users %> | <%= link_to 'New user', new_user_path, :id => 'add_new', :class => 'ui-icon ui-icon-plusthick' %>
