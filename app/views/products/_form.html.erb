<% semantic_form_for (@product) do |f| %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :manufacturer %>
    <%= f.input :schedule %>
    <%= f.input :dosage_form, :collection => Product::DOSAGE_FORMS, :label_method => Proc.new{ |a| a.to_s.humanize } %>
    <%= f.input :strength %>
    <%= f.input :composition %>
    <%= f.input :common_uses %>
  <% end %>
  <%= f.buttons %>
<% end %>
