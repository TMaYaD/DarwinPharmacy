<table id='data'>
<thead>
  <tr>
    <th>Name</th>
    <th>Manufacturer</th>
    <th>Schedule</th>
    <th>Composition</th>
    <th>Dosage Form</th>
    <th>Strength</th>
    <th>Common uses</th>
    <th colspan=3>&nbsp;</th>
  </tr>
</thead>
<tbody>
<% @products.each do |product| %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.manufacturer %></td>
    <td><%=h product.schedule %></td>
    <td><%=h product.composition %></td>
    <td><%=h product.dosage_form %></td>
    <td><%=h product.strength %></td>
    <td><%=h product.common_uses %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete, :class =>'ui-icon ui-icon-trash' %></td>
  </tr>
<% end %>
</tbody>
</table>

<%= link_to 'New product', new_product_path, :id => 'add_new', :class => 'ui-icon ui-icon-plusthick' %>
