<nav><h1><%= current_user ? current_user.login.titleize : '' %>  >>  <%= controller_name.titleize %></h1>
<ul>
<% for resource in [:users, :customers, :products, :product_batches, :bills] %>
  <% if permitted_to? :index, resource %>
    <li><%= link_to resource.to_s.humanize, :controller => resource %></li>
  <% end %>
<% end %>
</ul></nav>
