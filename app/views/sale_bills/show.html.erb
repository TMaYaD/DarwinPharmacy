<table>
  <tr>
    <th rowspan=2>Franchise:</th>
    <td rowspan=2>
      <%=h @sale_bill.franchise.name %>
      <pre><%=h @sale_bill.franchise.address %></pre>
    </td>
    <th>TIN</th>
    <td><%=h @sale_bill.franchise.tin %></td>
  </tr>
  <tr>
    <th>DL</th>
    <td><%=h @sale_bill.franchise.dl %></td>
  </tr>
</table>

<table>
	<thead>
		<tr>
			<th>Product Name</th>
			<th>Batch Code</th>
			<th>Pack</th>
			<th>Exp. Date</th>
			<th>MRP</th>
			<th>Qty</th>
			<th>Free Qty</th>
			<th>Rate</th>
			<th>Discount</th>
			<th>VAT</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>
	<% @sale_bill.sale_bill_items.each do |item| %>
		<tr>
			<td><%= item.product_batch.product_name %></td>
			<td><%= item.product_batch.batch_code %></td>
			<td><%= item.product_batch.pack %></td>
			<td><%= item.product_batch.exp_date %></td>
			<td><%= item.product_batch.mrp %></td>
			<td><%= item.quantity %></td>
			<td><%= 0 %></td><!-- No frees -->
			<td><%= item.product_batch.rate %></td>
			<td><%= 0 %></td><!-- No Discount -->
			<td><%= item.product_batch.vat %> %</td>
			<td><%= item.amount %></td>
		 </tr>
	<% end %>
	</tbody>
  <tfoot>
    <tr>
      <td colspan=8>&nbsp;</td>
      <th>Total Amount</th>
      <td>&nbsp;</td>
      <td><%= @sale_bill.amount %></td>
    </tr>
	  <% @sale_bill.tax.each do |key, val| %>
    <tr>
      <th>Total <%= key %>% Taxable Amount</th>
      <td><%= val[:amount] %></td>
      <th>Total <%= key %>% Tax</th>
      <td><%= val[:tax] %></td>
      <td colspan=7>&nbsp;</td>
    </tr>
	  <% end %>
  </tfoot>
</table>


