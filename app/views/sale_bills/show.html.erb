<b>Franchise:</b>
<%=h @sale_bill.franchise.name %>
<%=h @sale_bill.franchise.address %>

<table>
	<thead>
		<tr>
			<th>Product Name</th>
			<th>Batch Code</th>
			<th>Pack</th>
			<th>Exp. Date</th>
			<th>MRP</th>
			<th>Qty</th>
			<th>Free Qty</th>
			<th>Rate</th>
			<th>Discount</th>
			<th>VAT</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>
	<% @sale_bill.sale_bill_items.each do |item| %>
		<tr>
			<td><%= item.product_batch.product_name %></td>
			<td><%= item.product_batch.batch_code %></td>
			<td><%= item.product_batch.pack %></td>
			<td><%= item.product_batch.exp_date %></td>
			<td><%= item.product_batch.mrp %></td>
			<td><%= item.quantity %></td>
			<td><%= 0 %></td><!-- No frees -->
			<td><%= item.product_batch.rate %></td>
			<td><%= 0 %></td><!-- No Discount -->
			<td><%= item.product_batch.vat %> %</td>
			<td><%= item.amount %></td>
		 </tr>
	<% end %>
	</tbody>
  <tfoot>
    <tr>
      <td colspan=8 rowspan=3>&nbsp;</td>
      <th border='none'>Total Amount</th>
      <td border-left='none'>&nbsp;</td>
      <td><%= @sale_bill.amount %></td>
    </tr>
	  <% @sale_bill.tax.each do |key, val| %>
    <tr>
      <th>Total <%= key %>% Tax</th>
      <td>&nbsp;</td>
      <td><%= val %></td>
    </tr>
	  <% end %>
  </tfoot>
</table>


<%= link_to 'Edit', edit_sale_bill_path(@sale_bill) %> |
<%= link_to 'Back', sale_bills_path %>
