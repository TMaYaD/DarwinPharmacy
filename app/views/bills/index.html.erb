<% table_for @bills do |t| %>
  <tr>
  <% semantic_form_for @search do |f| %>
    <th><%= f.input :id_like %></th>
    <th><%= f.input :customer_name_like %></th>
    <th><%= f.input :franchise_name_like %></th>
    <th><%= f.input :created_at_greater_than %></th>
    <th><%= f.input :created_at_less_than %></th>
    <th><%= f.submit 'Search' %></th>
  <% end %>
  </tr>

  <%= t.data :id, :customer, :franchise, :created_at, :actions => :all %>
<% end %>

<%= will_paginate @bills %> | <%= link_to 'New bill', new_bill_path, :id => 'add_new', :class => 'ui-icon ui-icon-plusthick' %>
