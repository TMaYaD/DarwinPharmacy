<table id='data'>
<thead>
  <tr>
    <th>Product</th>
    <th>Batch code</th>
    <th>Mfg date</th>
    <th>Exp date</th>
    <th>Price</th>
    <th colspan=3>&nbsp;</th>
  </tr>
</thead>
<tbody>
<% @product_batches.each do |product_batch| %>
  <tr>
    <td><%=h product_batch.product %></td>
    <td><%=h product_batch.batch_code %></td>
    <td><%=h product_batch.mfg_date %></td>
    <td><%=h product_batch.exp_date %></td>
    <td><%=h product_batch.mrp %></td>
    <td><%= link_to 'Show', product_batch %></td>
    <td><%= link_to 'Edit', edit_product_batch_path(product_batch) %></td>
    <td><%= link_to 'Destroy', product_batch, :confirm => 'Are you sure?', :method => :delete, :class =>'ui-icon ui-icon-trash' %></td>
  </tr>
<% end %>
</tbody>
</table>

<%= link_to 'New product_batch', new_product_batch_path, :id => 'add_new', :class => 'ui-icon ui-icon-plusthick' %>
