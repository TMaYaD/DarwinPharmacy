<% table_for @product_batches do |t| %>
  <tr>
  <% semantic_form_for @search do |f| %>
    <th><%= f.input :product_name_like %></th>
    <th></th>
    <th><%= f.input :batch_code_like %></th>
    <th><%= f.input :exp_date_greater_than %>
        <%= f.input :exp_date_less_than %></th>
    <th><%= f.submit 'Search' %></th>
  <% end %>
  </tr>

  <%= t.data :product, :pack, :batch_code, :exp_date, :mrp, :vat, :rate, :actions => :all %>
<% end %>

