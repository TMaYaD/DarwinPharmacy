<h1>Listing product_batches</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Batch code</th>
    <th>Mfg date</th>
    <th>Exp date</th>
    <th>Price</th>
  </tr>

<% @product_batches.each do |product_batch| %>
  <tr>
    <td><%=h product_batch.product %></td>
    <td><%=h product_batch.batch_code %></td>
    <td><%=h product_batch.mfg_date %></td>
    <td><%=h product_batch.exp_date %></td>
    <td><%=h product_batch.price %></td>
    <td><%= link_to 'Show', product_batch %></td>
    <td><%= link_to 'Edit', edit_product_batch_path(product_batch) %></td>
    <td><%= link_to 'Destroy', product_batch, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product_batch', new_product_batch_path %>